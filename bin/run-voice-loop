#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# shellcheck disable=SC1091
source "$SCRIPT_DIR/px-env"

if [ -n "${CODEX_CHAT_CMD:-}" ]; then
  export CODEX_CHAT_CMD
else
  export CODEX_CHAT_CMD="codex chat --model gpt-4.1-mini --input -"
fi

exec "$SCRIPT_DIR/codex-voice-loop" "$@"
